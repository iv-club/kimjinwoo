<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SelectActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="vertical"
        android:background="@drawable/background"
        android:paddingTop="25dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Question 2"
            android:fontFamily="@font/ImcreSoojin"
            android:textColor="@color/white"
            android:textSize="40dp" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:gravity="center"
        android:text="잘못된 음식이란 것은 없다."
        android:fontFamily="@font/ImcreSoojin"
        android:textColor="#FA5858"
        android:textSize="15dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:gravity="center"
        android:text="션 스튜어트"
        android:fontFamily="@font/ImcreSoojin"
        android:textColor="#FA5858"
        android:textSize="15dp" />

    <Button
        android:layout_marginTop="50dp"
        android:id="@+id/btn_q1"
        android:layout_width="350dp"
        android:layout_height="80dp"
        android:text="음식을 먹으려는 시간대는 언제인가요?"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:fontFamily="@font/ImcreSoojin"
        android:backgroundTint="#FA5858"
        android:textSize="20sp"
        android:gravity="center"
        android:layout_gravity="center"
        />

    <Button
        android:layout_marginTop="50dp"
        android:id="@+id/btn_q12"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="아침"
        android:fontFamily="@font/ImcreSoojin"
        android:backgroundTint="#ff9956"
        android:textSize="20sp"
        android:gravity="center"
        android:layout_gravity="center"
        />

    <Button
        android:layout_marginTop="20dp"
        android:id="@+id/btn_q13"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="점심"
        android:fontFamily="@font/ImcreSoojin"
        android:backgroundTint="#ff9956"
        android:textSize="20sp"
        android:gravity="center"
        android:layout_gravity="center"
        />

    <Button
        android:layout_marginTop="20dp"
        android:id="@+id/btn_q14"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="저녁"
        android:fontFamily="@font/ImcreSoojin"
        android:backgroundTint="#ff9956"
        android:textSize="20sp"
        android:gravity="center"
        android:layout_gravity="center"
        />

    <Button
        android:layout_marginTop="20dp"
        android:id="@+id/btn_q15"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="새벽"
        android:fontFamily="@font/ImcreSoojin"
        android:backgroundTint="#ff9956"
        android:textSize="20sp"
        android:gravity="center"
        android:layout_gravity="center"
        />

</LinearLayout>
